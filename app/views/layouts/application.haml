%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= ["MumbleBox", @title].compact.join(" || ")
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Le styles
    = stylesheet_link_tag 'bootstrap', 'bootstrap-responsive'
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
  %body
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} MumbleBox
          .nav-collapse.collapse
            %ul.nav.pull-left
              %li.dropdown
                %a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown"} 
                  Users
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "/users/new"}
                      Register
                  %li
                    %a{:href => "/users/index"}
                      List
              %li
                %a{:href => "/orders/index"}
                  Order
              %li
                %a{:href => "/about_us"} About
              %li
                %a{:href => "/contact"} Contact
            %ul.nav.pull-right
              %li.dropdown.pull-right            
                - if signed_in? 
                  %a.dropdown-toggle{:href => "#", "role" => "button", "data-toggle" => "dropdown"} 
                    = current_user.displayName
                    %b.caret
                  %ul.dropdown-menu.pull-right{"role" => "menu", "aria-labelledby" => "dLabel"}
                    %li
                      %a{:href => "/users/show/" + current_user.username} My Account
                    %li
                      %a{:href => "/logout"} Logout
                - else
                  %li
                    %a{:href => "/login"} Login
                  %li
                    %a{:href => "/users/new"} Register

          / /.nav-collapse
    .container
      / Main hero unit for a primary marketing message or call to action
      .hero-unit
        #main= yield
      %footer
        %p &copy; Company 2012
    / /container
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster

    %script{:src => "/javascripts/bootstrap.js"}
    %script{:src => "/javascripts/jquery.js"}
    %script{:src => "/javascripts/dropdown.js"}
    %script{:src => "https://js.stripe.com/v2/"}
    %script{:src => "/javascripts/orderForm.js"}
    %script{:src => "/javascripts/jquery.formatCurrency-1.4.0.min.js"}
