- @title = "Register New Account"
= form_for :user, url(:users, :create) do |f|
  = f.error_messages
  %p
    = f.label :username
    = f.text_field :username
  %p
    = f.label :email
    = f.text_field :email
  %p
    = f.label :password
    = f.password_field :password
  %p
    = f.submit "Create", :class => 'button'
